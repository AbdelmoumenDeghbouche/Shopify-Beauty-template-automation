{{ 'image-bar.css' | asset_url | stylesheet_tag }}

<div
  class="lm-tot-bar"
  style="
    --bar-font-size:{{ block.settings.text_size }}px;
    --bar-zoom:{{ block.settings.image_size }};
    --bar-image-space:{{ block.settings.image_space }}px;
    justify-content: {{ block.settings.block_alignment }};
  "
>
  <div class="lm-img-bar" {{ block.shopify_attributes }}>

    {%- for i in (1..5) -%}
      {%- assign image_key = "image_" | append: i -%}
      {%- assign hide_image_key = "hide_img_" | append: i -%}
      {%- assign image_setting = block.settings[image_key] -%}
      {%- assign hide_image_setting = block.settings[hide_image_key] -%}
      {%- unless hide_image_setting -%}
        <span>
          {%- if image_setting != blank -%}
            {{ image_setting | image_url: width: 100 | image_tag }}
          {%- else -%}
            <svg xmlns="http://www.w3.org/2000/svg" class="placeholder-svg" width="40px" height="40px" viewBox="0 0 16 16" id="meteor-icon-kit__solid-circle-s" fill="none"><path fill-rule="evenodd" clip-rule="evenodd" d="M8 16C3.58172 16 0 12.4183 0 8C0 3.58172 3.58172 0 8 0C12.4183 0 16 3.58172 16 8C16 12.4183 12.4183 16 8 16z" fill="#f2f2f2"/></svg>
          {%- endif -%}
        </span>
      {%- endunless -%}
    {%- endfor -%}
  </div>
  {{ block.settings.text_block }}
</div>
