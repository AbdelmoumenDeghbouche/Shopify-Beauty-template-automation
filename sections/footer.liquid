      {%- if section.settings.show_bottom_text -%}
        <p class="copyright__content page-width" style="color:{{ section.settings.color_bottom_text }};font-size:{{section.settings.bottom_text_font_size}}px;text-align:{{section.settings.bottom_text_align}};margin-top: 1rem;">
          {{- section.settings.bottom_text -}}
        </p>
      {%- endif -%}
    </div>
  </footer>

