                        <div class="lm-feature-image">
                          {%- if block.settings.image_drawer != blank -%}
                            <img src="{{ block.settings.image_drawer | img_url: '800x' }}" width="{{ block.settings.image_drawer.width }}" height="{{ block.settings.image_drawer.height }}">
                          {%- else -%}
                            {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
                          {%- endif -%}
                        </div>
                  {%- endcase -%}
                </div>
              {%- endfor -%}
            </div>
          {%- endif -%}

