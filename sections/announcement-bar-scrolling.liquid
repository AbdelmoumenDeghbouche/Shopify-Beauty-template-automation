

<div
  class="utility-bar{% if section.settings.show_line_separator and section.blocks.size > 0 %} utility-bar--bottom-border{% endif %}"
 style="background-color: {{ section.settings.background_color }}; background-image: {{ section.settings.background_gradient }};overflow: hidden;"
  >
  <div class="page-width utility-bar__grid utility-bar-{{ section.id }}" style="height: {{ section.settings.mobile_height }}px;">
    <div
      class="announcement-bar"
      role="region"
      aria-label="{{ 'sections.header.announcement' | t }}"
    >
      <div class="announcement-bar__announcement" role="region" aria-label="{{ 'sections.header.announcement' | t }}">
        <style>
          .announcement-bar__scrolling-text {
            white-space: nowrap;
            overflow: hidden;
            position: relative;
            width: 120%;
            margin-left: -10%;
            height: 100%;
            display: flex;
            align-items: center;
          }
          .announcement-bar__scrolling-text .scrolling-content {
            display: flex;
            align-items: center;
            white-space: nowrap;
            height: 100%;
          }
           .announcement-bar__scrolling-text-{{section.id}} .scrolling-content {
            animation: scroll-{{ section.id }} {{ section.settings.scroll_speed | times: section.blocks.size }}s linear infinite;
          }
          @media screen and (min-width: 750px) {
            .utility-bar-{{ section.id }} {
              height: {{ section.settings.desktop_height }}px !important;
            }
          }
          {%- for block in section.blocks -%}
            .announcement-bar__message-{{ block.id }} {
              font-size: {{ block.settings.text_size_mobile }}px;
              letter-spacing: {{ block.settings.letter_spacing_mobile }}px;
              {% if block.settings.use_gradient %}
                background: linear-gradient({{ block.settings.gradient_angle }}deg, {{ block.settings.gradient_color_1 }}, {{ block.settings.gradient_color_2 }});
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
              {% else %}
                color: {{ block.settings.text_color }};
              {% endif %}
              {% if block.settings.font_family == 'heading' %}
                font-family: var(--font-heading-family);
                font-style: var(--font-heading-style);
                font-weight: var(--font-heading-weight);
              {% else %}
                font-family: var(--font-body-family);
                font-style: var(--font-body-style);
                font-weight: var(--font-body-weight);
              {% endif %}
              margin: 0 {{ block.settings.margin }}px;
              display: inline-flex;
              align-items: center;
              gap: {{ block.settings.text_size_mobile | divided_by: 2.5 }}px;
            }
            .announcement-bar__message-{{ block.id }} .svg-wrapper {
              width: {{ block.settings.text_size_mobile | plus: 4 }}px;
              height: {{ block.settings.text_size_mobile | plus: 4 }}px;
            }
            .announcement-bar__message-{{ block.id }} svg {
              width: {{ block.settings.text_size_mobile | plus: 4 }}px;
              height: {{ block.settings.text_size_mobile | plus: 4 }}px;
            }
            .announcement-bar__message-{{ block.id }} svg path {
              {% if block.settings.use_gradient %}
                fill:{{ block.settings.text_color }};
              {% else %}
                fill: {{ block.settings.text_color }};
              {% endif %}
            }
            .announcement-bar__message-{{ block.id }} .announcement-bar__custom-image {
              display: flex;
              align-items: center;
            }
            .announcement-bar__message-{{ block.id }} .announcement-bar__custom-image img {
              width: {{ block.settings.text_size_mobile | plus: 4 }}px;
              height: {{ block.settings.text_size_mobile | plus: 4 }}px;
              object-fit: contain;
            }
            @media screen and (min-width: 750px) {
              .announcement-bar__message-{{ block.id }} {
                font-size: {{ block.settings.text_size }}px;
                letter-spacing: {{ block.settings.letter_spacing }}px;
                gap: {{ block.settings.text_size | divided_by: 2.5 }}px;
              }
              .announcement-bar__message-{{ block.id }} .svg-wrapper {
                width: {{ block.settings.text_size | plus: 4 }}px;
                height: {{ block.settings.text_size | plus: 4 }}px;
              }
              .announcement-bar__message-{{ block.id }} svg {
                width: {{ block.settings.text_size | plus: 4 }}px;
                height: {{ block.settings.text_size | plus: 4 }}px;
              }
              .announcement-bar__custom-image-{{ block.id }} {
                width: auto;
                height: {{ block.settings.custom_image_height }}px;
                margin-right: {{ block.settings.text_size | divided_by: 2.5 }}px;
              }
              .announcement-bar__message-{{ block.id }} .announcement-bar__custom-image img {
                width: {{ block.settings.text_size | plus: 4 }}px;
                height: {{ block.settings.text_size | plus: 4 }}px;
              }
            }
            {% if block.type == 'button' %}
              .announcement-bar__button-{{ block.id }} {
                font-size: {{ block.settings.text_size }}px;
                background-color: {{ block.settings.background_color }};
                color: {{ block.settings.text_color }};
                border-radius: {{ block.settings.border_radius }}px;
                padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
                margin: 0.3rem {{ block.settings.margin }}px;
                text-decoration: none;
                display: inline-block;
                transition: all 0.2s ease;
              }
              .announcement-bar__button-{{ block.id }}:hover {
                background-color: {{ block.settings.hover_background_color }};
                color: {{ block.settings.hover_text_color }};
              }
            {% endif %}
            {% if block.type == 'image_announcement' %}
              .announcement-bar__image-{{ block.id }} {
                margin: 0 {{ block.settings.margin }}px;
                display: flex;
              }
              .announcement-bar__image-{{ block.id }} img {
                border-radius: {{ block.settings.image_border_radius | default: 0 }}px;
              }
            {% endif %}
          {%- endfor -%}
          @keyframes scroll-{{ section.id }} {
            0% { transform: translateX(0); }
            100% { transform: translateX({{ section.settings.scroll_direction | times: -50 }}%); }
          }
        </style>
        <div class="announcement-bar__scrolling-text announcement-bar__scrolling-text-{{section.id}}">
          <div class="scrolling-content">
            {%- for i in (1..30) -%}
              {%- for block in section.blocks -%}
                {%- if block.type == 'announcement' -%}
                  {%- if block.settings.text != blank -%}
                    {%- if block.settings.link != blank -%}
                      <a href="{{ block.settings.link }}" class="announcement-bar__link link link--text focus-inset animate-arrow">
                    {%- endif -%}
                    <p class="announcement-bar__message announcement-bar__message-{{ block.id }} h5" style="display: inline-flex; padding: 0 2rem; min-height: fit-content;"  {{ block.shopify_attributes }}>
                      {% if block.settings.custom_image != blank %}
                        <div class="announcement-bar__custom-image announcement-bar__custom-image-{{ block.id }}">
                          {{ block.settings.custom_image | image_url: width: '100%' | image_tag:
                            loading: 'lazy',
                            width: auto,
                            height: '100%'
                          }}
                        </div>
                      {% elsif block.settings.icon != 'none' %}
                        {% render 'icon-accordion', icon: block.settings.icon %}
                      {% endif %}
                      <span>{{ block.settings.text | replace: '[', '<span class="lumin-text__fancy1">' | replace: ']', '</span>' | replace: '!-', '<span class="lumin-text__fancyalt">' | replace: '-!', '</span>' | replace: '((', '<span class="lumin-text__fancy2">' | replace: '))', '</span>' }}</span>
                      {%- if block.settings.link != blank -%}
                        {{- 'icon-arrow.svg' | inline_asset_content -}}
                      {%- endif -%}
                    </p>
                    {%- if block.settings.link != blank -%}
                      </a>
                    {%- endif -%}
                  {%- endif -%}
                {%- endif -%}
                {%- if block.type == 'image_announcement' -%}
                  {%- if block.settings.image != blank -%}
                    {%- if block.settings.link != blank -%}
                      <a
                        href="{{ block.settings.link }}"
                        class="announcement-bar__link link focus-inset"
                      >
                    {%- endif -%}
                    <div class="announcement-bar__image announcement-bar__image-{{ block.id }}">
                      {{ block.settings.image | image_url: width: block.settings.image_width | image_tag:
                        loading: 'lazy',
                        width: block.settings.image_width,
                        height: block.settings.image_height
                      }}
                    </div>
                    {%- if block.settings.link != blank -%}
                      </a>
                    {%- endif -%}
                  {%- endif -%}
                {%- endif -%}
                {%- if block.type == 'button' -%}
                  {%- if block.settings.text != blank -%}
                    <a href="{{ block.settings.link }}" class="announcement-bar__button-{{ block.id }}"  {{ block.shopify_attributes }}>
                      {{ block.settings.text | escape }}
                      {% if block.settings.show_arrow %} {{- 'icon-arrow.svg' | inline_asset_content -}} {% endif %}
                    </a>
                  {%- endif -%}
                {%- endif -%}
              {%- endfor -%}
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

